<div id="available_rides" class="center">
  <h1>My Connection/Requests</h1>

  <div id="rides">
    <table class="table table-striped table-condensed">
      <thead>
      <tr>
        <td class="bold">Origin</td>
        <td class="bold">Destination</td>
        <td class="bold">Company or Business</td>
        <td class="bold">Days</td>
        <td class="bold">Time</td>
        <td class="bold">Accepted?</td>
        <td class="bold">Actions</td>
      </tr>
      </thead>
      <tbody>
      <% @connections.each do |connection| %>
          <% ride = connection.ride %>
          <tr id="ride_<%= ride.id %>">
            <td>
              <%= ride.origin %> <br>
              <%= ride.origin_address %>
            </td>
            <td>
              <%= ride.destination %> <br>
            </td>
            <td>
              <%= ride.business_name %>&nbsp;(<%= ride.business_email %>) <br>
              <%= ride.destination_address %>
            </td>
            <td>
              <%= ride.commute_days %>
            </td>
            <td>
              Leave : <%= ride.leave_at %> <br>
              Return: <%= ride.return_at %>
            </td>
            <td>
              <%= connection.status %>
            </td>
            <td>
              <%= link_to "Delete", "", :method => :delete, data: {confirm: "Are you sure you won't to cancel your request to carpool?"},
                          :class => "btn btn-small btn-danger" %>
            </td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
