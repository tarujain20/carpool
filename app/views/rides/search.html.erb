<div id="available_rides" class="center">
  <h1>
    Available Rides&nbsp;<%= link_to "Request or Offer a Ride", new_ride_path, :id => "create_new_ride", :class => "btn btn-large btn-primary" %>
  </h1>


  <div id="rides">
    <table class="table table-striped table-condensed">
      <thead>
      <tr>
        <td class="bold">Origin</td>
        <td class="bold">Destination</td>
        <td class="bold">Company or Business</td>
        <td class="bold">Type</td>
        <td class="bold">Days</td>
        <td class="bold">Time (approx)</td>
        <td class="bold">Action</td>
      </tr>
      </thead>
      <tbody>
      <%= render partial: "ride", collection: @rides %>
      </tbody>
    </table>
  </div>


</div>