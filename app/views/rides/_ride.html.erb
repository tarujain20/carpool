<tr id="ride_<%= ride.id %>">
  <td>
    <%= ride.origin %> <br>
    (<%= ride.origin_address %>)
  </td>
  <td>
    <%= ride.destination %> <br>
    (<%= ride.destination_address %>)
  </td>
  <td>
    <%= ride.business_name %>
    <% if ride.verified_business_email %>
        (Verified Work Email)
    <% end %>
  </td>
  <td>
    <%= ride.status %>
  </td>
  <td>
    <%= ride.total_seat %>
  </td>
</tr>