<div id="available_rides" class="center">
  <h1>My Rides</h1>

  <div id="rides">
    <table class="table table-striped table-condensed">
      <thead>
      <tr>
        <td class="bold">Origin</td>
        <td class="bold">Destination</td>
        <td class="bold">Company or Business</td>
        <td class="bold">Type</td>
        <td class="bold">Days and Time</td>
        <td class="bold">Actions</td>
      </tr>
      </thead>
      <tbody>
      <% @rides.each do |ride| %>
          <tr id="ride_<%= ride.id %>">
            <td>
              <%= ride.origin %> <br>
              (<%= ride.origin_address %>)
            </td>
            <td>
              <%= ride.destination %> <br>
              (<%= ride.destination_address %>)
            </td>
            <td>
              <%= ride.business_name %> <br>
              <%= ride.business_email %>
              <% if ride.verified_business_email %>
                  (Verified Work Email)
              <% end %>
            </td>
            <td>
              <%= ride.status %><br>
              <%= pluralize(ride.total_seat, 'seat') %>
            </td>
            <td>
              <%= ride.commute_days %> <br>
              Leave: <%= ride.leave_at %> &nbsp; Return: <%= ride.return_at %>
            </td>
            <td>
              <%= link_to "Edit", edit_ride_path(ride), :class => "btn btn-small btn-success" %>
              <%= link_to "Delete", ride_path(ride), :method => :delete, data: {confirm: "Are you sure?"},
                          :class => "btn btn-small btn-danger" %>
            </td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
